# vi:syntax=bash

attach() {
  if [ -z "$1" ]
  then
    tmux at -t $(current)
  else
    tmux at -t "$1*"
  fi
}

clip() {
  cat $1 | pbcopy
}

current() {
  printf $(basename `pwd`)
}

f() {
  ack $1 -k *
}

nmux() {
  tmux new -s $(current)
}

delete_merged() {
  git branch --merged | grep -v "\*" | xargs -n 1 git branch -d
}

