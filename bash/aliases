# vi:syntax=sh

# Git
alias add="git add -u; git add ."
alias am="git commit --amend"
alias commit="add && git commit"
alias cob="git checkout -b"
alias d="git d"
alias dc="git diff --cached"
alias g=git
alias l="git log"
# `gem install git-up`
alias ðŸš€="git up && git push"
alias push="git up && git push"
alias reset="git reset"
