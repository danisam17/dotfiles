# vi:syntax=sh

# Git
alias add="git add -u; git add ."
alias am="git commit --amend"
alias commit="add && git commit"
alias co="git branch | cut -c 3- | selecta | xargs git checkout"
alias cob="git checkout -b"
alias g=git
alias l="git r"
alias last="git show $(git rev-parse HEAD)"
alias reset="git reset"
alias s="git status"

# Ruby/Rails/Rake
alias bu='bundle check; bundle install'
alias back="rake db:rollback"
alias bake="be rake"
alias be="bundle exec"
alias rmi="be rake db:migrate db:test:prepare"

# Applications
alias psql="/Applications/Postgres93.app/Contents/MacOS/bin/psql"

# Terminal misc.
alias alive="ps aux | grep"
alias c="clear"
alias die="exec $SHELL -l"
alias site="cd ~/src/website"
alias sudo='sudo '
alias t='tmux'
alias ve="vim ~/.vimrc"
alias v=vim
alias vi=vim
alias vup="vim-update-bundles -n"

# Color LS
colorflag="-G"
alias ls="command ls ${colorflag} -l"
