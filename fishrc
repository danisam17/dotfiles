# Path to your oh-my-fish.
set fish_path $HOME/.oh-my-fish

# Theme
set fish_theme robbyrussell

# Functions
function ef; vim ~/.config/fish/config.fish; end
function ev; vim ~/.vimrc; end
function et; vim ~/.tmux.conf; end
function eg; vim ~/.gitconfig; end

function ..;    cd ..; end
function ...;   cd ../..; end
function ....;  cd ../../..; end
function .....; cd ../../../..; end

function reload; source ~/.config/fish/config.fish; end

alias be="bundle exec"

set PATH $HOME/.bin $PATH

function current
  printf (basename (pwd))
end

function nmux
  tmux new -s (current)
end

function rmux
  tmux at -t (current)
end

set BROWSER open

set -g -x fish_greeting '' # omg shut up
set -g -x EDITOR vim

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-fish/plugins/*)
# Custom plugins may be added to ~/.oh-my-fish/custom/plugins/
# Example format: set fish_plugins autojump bundler
set fish_plugins brew bundler localhost rails rbenv rake

# Path to your custom folder (default path is $FISH/custom)
#set fish_custom $HOME/dotfiles/oh-my-fish

# Load oh-my-fish configuration.
. $fish_path/oh-my-fish.fish

eval (hub alias -s)
